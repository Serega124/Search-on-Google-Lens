{
    "manifest_version": 2,
    "name": "Search on Google Lens",
    "version": "1.0",
    "description": "This is an add-on that allows you to search for images on a website with Google Lens.",
    "permissions": [
        "<all_urls>",
        "contextMenus"
    ],
    "browser_action": {
        "default_title": "Search on Google Lens"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}